{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
   "Routes":{
    "gamesRead":{
      "ClusterId": "games",
      "Match": {
        "Path": "/games/{**catch-all}",
        "Methods": ["GET"]
      },
      "Transforms":[
        {
          "PathPattern": "api/games/{**catch-all}"
        }
      ]
       
    },
    "gamesWrite":{
      "ClusterId": "games",
      "AuthorizationPolicy":"default",
      "Match": {
        "Path": "/games/{**catch-all}",
        "Methods": ["POST","PUT","DELETE"]
      },
      "Transforms":[
        {
          "PathPattern": "api/games/{**catch-all}"
        }
      ]
       
    }
   }
  }
}
